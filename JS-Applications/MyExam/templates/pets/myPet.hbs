<section class="myPet">
    <h3>Name: {{name}}</h3>
    <p>Category: {{category}}</p>
    <p class="img"><img src="{{imageURL}}"></p>
    <p class="description">{{desciption}}</p>
    <div class="pet-info">
        <a href="#/detailsPet/:{{_id}}">
            <button class="button">Details</button>
        </a>
        <a href="#/deletePet/:{{_id}}">
            <button class="button">Delete</button>
        </a>
        <i class="fas fa-heart"></i> <span>{{numberOfPets}}</span>
    </div>
</section>